{{! scroll-mt-12 accounts for the height of the sticky header }}
<div
  class="bg-gray-50 dark:bg-gray-900 rounded-md w-full scroll-mt-12"
  ...attributes
  {{did-update this.handleContentIdentifierDidUpdate @contentIdentifier}}
>
  <div
    class="bg-white dark:bg-gray-900 border border-gray-300 dark:border-gray-800/60 relative
      {{if (has-block 'footer') 'rounded-t border-b-0' 'rounded'}}"
  >
    <div class="p-4 pt-3 sm:p-6 sm:pt-5 {{if (has-block 'footer') 'pb-4'}}">
      {{#if (has-block "header")}}
        {{yield to="header"}}
      {{else}}
        <h2 class="font-semibold border-b dark:border-gray-800 pb-2 mb-5 text-lg text-gray-700 dark:text-gray-100">{{@title}}</h2>
      {{/if}}

      <div class="{{if this.isCollapsed 'h-60 overflow-hidden'}}">
        {{yield to="content"}}
      </div>

      {{#if this.isCollapsed}}
        <div
          role="button"
          class="absolute rounded inset-0 vertical-mask dark:vertical-mask-gray-900 p-4 flex items-end justify-center group z-10"
          data-test-expand-button
          {{on "click" this.handleExpandButtonClick}}
        >
          <div
            class="border dark:border-gray-800/60 bg-white dark:bg-gray-925 group-hover:bg-gray-100 dark:group-hover:bg-gray-900 group-hover:border-gray-300 dark:group-hover:border-gray-700/60 transition-colors px-4 py-5 text-gray-700 dark:text-gray-200 text-sm rounded flex flex-col items-center w-full group"
          >
            <div class="font-bold flex items-center sm:mb-0">
              Expand
              {{svg-jar "arrow-down" class="w-4 ml-2 fill-current"}}
            </div>
          </div>
        </div>
      {{else if @isCollapsedByDefault}}
        <button
          class="mt-4 border dark:border-gray-800/60 hover:bg-gray-100 dark:hover:bg-gray-900 hover:border-gray-300 dark:hover:border-gray-700/60 transition-colors px-4 py-5 text-gray-700 dark:text-gray-200 text-sm rounded flex flex-col items-center w-full group"
          type="button"
          {{on "click" this.handleCollapseButtonClick}}
          data-test-collapse-button
        >
          <div class="font-bold flex items-center sm:mb-0">
            Collapse
            {{svg-jar "arrow-up" class="w-4 ml-2 fill-current"}}
          </div>
        </button>
      {{/if}}
    </div>
  </div>

  {{#if (has-block "footer")}}
    <div class="border border-gray-300 rounded-b relative" data-test-footer>
      <div class="h-px w-full bg-gray-200 bg-opacity-50 absolute -top-px"></div>

      <div class="px-6 min-h-[40px] flex items-center">
        <div class="w-full">
          {{yield to="footer"}}
        </div>
      </div>
    </div>
  {{/if}}
</div>